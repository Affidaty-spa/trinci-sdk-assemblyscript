{
    "targets": {
        "debug": {
            "outFile": "build/debug.wasm",
            "textFile": "build/debug.wat",
            "debug": true
        },
        "release": {
            "outFile": "build/release.wasm",
            "textFile": "build/release.wat",
            "optimizeLevel": 3,
            "shrinkLevel": 2,
            "converge": true,
            "noAssert": false
        }
    },
    "options": {
        "sourceMap":true,
        "importMemory": false,
        "exportRuntime": false,
        "memoryBase": 0
    }
}