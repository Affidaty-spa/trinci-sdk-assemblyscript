{
    "targets": {
        "debug": {
            "outFile": "build/debug.wasm",
            "textFile": "build/debug.wat",
            "debug": true,
            "sourceMap":true
        },
        "release": {
            "outFile": "build/release.wasm",
            "textFile": "build/release.wat",
            "runtime": "stub",
            "optimize": true,
            "optimizeLevel": 3,
            "shrinkLevel": 2,
            "converge": true,
            "noAssert": true
        }
    },
    "options": {
        "stats": true,
        "importMemory": false,
        "exportRuntime": false,
        "memoryBase": 0
    }
}